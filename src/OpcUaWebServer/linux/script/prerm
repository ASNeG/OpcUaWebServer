echo "PRERM RUN"

if [ -x /sbin/stop ] && [ -e "/etc/init/OpcUaWebServer.conf" ]; then
    # use Ubuntu upstart
    echo "INFO: stopping daemon by upstart"
    /sbin/stop OpcUaWebServer 
elif [ -x /usr/bin/systemctl ] && [ -e "/usr/lib/systemd/system/OpcUaWebServer.service" ]; then
    # use systemd
    echo "INFO: stopping  daemon by systemd"
    /usr/bin/systemctl stop OpcUaWebServer.service
    /usr/bin/systemctl enable OpcUaWebServer.service
else
    # use SYSV init script
    if [ -e "/etc/init.d/OpcUaWebServer" ]; then
        echo "INFO: stopping daemon by SYS init script"
        invoke-rc.d OpcUaWebServer stop || exit $?
        update-rc.d -f OpcUaWebServer remove >/dev/null
    fi
fi

echo "PRERM RETURN"
exit 0

